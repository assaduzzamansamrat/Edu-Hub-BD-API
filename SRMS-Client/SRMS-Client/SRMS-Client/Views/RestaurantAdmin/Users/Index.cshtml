<div class="modal fade" id="CreateNewUser" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content add-edit-modal">
            <div class="modal-header">
                <h4 class="modal-title">Create new user</h4>
                <button type="button" class="close modal-close-btn" onclick="CloseCreateNewUserModal();">&times;</button>
            </div>
            <div class="modal-body">
                <p class="modal-paragraph"><strong>Please enter the informations for creating a new user.</strong></p>
                <div class="row">

                    @using (Html.BeginForm("CreateUser", "Users", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="col">
                            <!-- Name input -->
                        <div class="form-outline">
                                <input type="text" id="FirstName" name="FirstName" class="form-control" />
                                <label class="form-label" for="FirstName">Event Name</label>
                            </div>
                        </div>
                        <div class="col">
                            <!-- Email input -->
                        <div class="form-outline">
                                <input type="text" id="LastName" name="LastName" class="form-control" />
                                <label class="form-label" for="LastName">Event Type</label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <!-- Name input -->
                            <div class="form-outline">
                                    <input type="email" id="EmailAddress" name="EmailAddress" class="form-control" />
                                    <label class="form-label" for="EmailAddress">Contact Number</label>
                                </div>
                            </div>
                            <div class="col">
                                <!-- Email input -->
                            <div class="form-outline">
                                    <input type="text" id="PhoneNumber" class="form-control" />
                                    <label class="form-label" for="PhoneNumber">Email address</label>
                                </div>
                            </div>
                        </div>
                        <button class="hidden" id="userCreateFormSubmitBtn" type="submit">Sign In</button>
                    }



                </div>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-cancel" onclick="CloseCreateNewUserModal();">Close</button>
                <button type="button" class="btn btn-primary" onclick="SubmitUserCreateForm();">Save</button>
            </div>
        </div>
    </div>
</div>

